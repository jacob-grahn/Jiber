{
  "name": "jiber-client",
  "version": "0.1.11",
  "description": "Synced data store",
  "main": "dist/jiber-client.bundle.js",
  "module": "dist/es6/index.js",
  "types": "src/index.ts",
  "scripts": {
    "watch": "tsc-watch --onSuccess 'npm run bundle'",
    "test": "jest src --ci --coverage --runInBand",
    "lint": "tslint --fix -p tsconfig.json",
    "prepare": "npm run build",
    "build": "tsc && npm run bundle && npm run minify",
    "compile": "tsc",
    "bundle": "rollup -c",
    "minify": "uglifyjs -c -m -o dist/jiber-client.bundle.min.js dist/jiber-client.bundle.js",
    "send-to-coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "author": "Jacob Grahn",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.9",
    "coveralls": "^3.0.3",
    "jest": "^24.1.0",
    "rollup": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "ts-jest": "^24.0.0",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.13.1",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.3.3333",
    "uglify-es": "^3.0.15",
    "wrtc": "^0.3.5"
  }
}
