{
  "devDependencies": {
    "@types/jest": "^22.1.0",
    "@types/sinon": "^4.1.2",
    "coveralls": "^3.0.0",
    "jest": "^22.1.4",
    "execa": "^0.9.0",
    "link-parent-bin": "^0.1.3",
    "lodash": "^4.17.4",
    "sinon": "^4.1.3",
    "ts-jest": "^22.0.0",
    "tslint": "^5.8.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.6.1"
  },
  "scripts": {
    "build": "node utils/exec-in-packages npm run build",
    "lint": "tslint --fix -p tsconfig.json",
    "link": "node utils/link",
    "prepare": "link-parent-bin && node utils/exec-in-packages npm install",
    "test": "jest packages",
    "travis-ci": "jest packages --ci --runInBand --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jacob-grahn/jiber"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "collectCoverageFrom": [
      "packages/**/*.ts",
      "!**/*d.ts",
      "!**/interfaces/*.ts",
      "!**/constants/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {}
}
